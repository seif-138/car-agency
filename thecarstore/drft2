    <!-- Loop through the car items from the database and display them as cards -->
    <?php include 'conn.php';
    $pdo=new PDO($attr,$user,$pass);
    $query='SELECT * from cars';
    $result=$pdo->query($query);
    while($car=$result->fetch()): ?>
    <div class="col-md-4">
      <div class="card">
        <img src="car/<?php echo $car['image']; ?>" class="card-img-top" alt="<?php echo $car['name']; ?>">
        <div class="card-body">
          <h5 class="card-title"><?php echo $car['name']; ?></h5>
          <p class="card-text"><?php echo $car['company']; ?> | <?php echo $car['year']; ?></p>
          <p class="card-price">$<?php echo $car['price']; ?></p>
          <a href="<?php echo $car['link']; ?>" class="btn btn-primary">Buy Now</a>
        </div>
      </div>
    </div>
    <?php endwhile; ?>
  </div>
